/*lab view vm-s */
.vm_s {
    border-top:solid 1px dimgrey;
    padding: 10px 0;
}
.vm_s td {
   padding:3px;
}
.vm_s:last-child {
    border-bottom:solid 1px dimgrey;
}
.vm_s a{
    font-size:1.2em
}

.copyMe {
    position:relative;
    padding: 2px 4px;
    border:solid 1px #c0c0c0;
    margin:6px 0;
    text-align: right;
}
.copyMe strong {
    margin-right:8em;
    text-align: left;
    display: block;
}
.copyMe .parentheight {
    position:absolute;
    top:0;
    right:0;
    bottom:0;
    width: 7em;
    text-align:center;
    border-left:solid 1px #c0c0c0;
    background: #DDD;
}
.copyMe .important {
    color:rgba(0, 0, 87, 1);
    font-weight: bold;
}

.copyMe .helptext {
    position:absolute;
    top: 50%;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    right:0;
    left:0;
}
.remote_connections {
    margin:3px 0;
}
.showtoggle {
    font-weight:bold;
    text-decoration:none;
    color:rgba(0, 0, 87, 1);
    cursor: pointer;
    padding:0 5px;
    display:inline-block;
}

/* lab edit form */
#lab_vmts .vmt{
    padding:10px;
    line-height: 1.5em;
    background: rgba(50,50,50,0.1);
    border:solid 1px #c0c0c0;
    margin:10px 0;
    border-width: 1px 0;
}
#lab_vmts .network, #lab_vmts .drive{
    padding:3px;
    background: rgba(255,255,255,0.4);
    border:solid 1px #c0c0c0;
    display:inline-block;
    margin:3px;
}

/* pagination classes */
.pagination, .page_info {
    font-size:0.8em;
    text-align:right;
    color: #666666;
    margin: 0.5em 0;
}

.pagination a, .previous_page, .next_page, .current {
    border-radius:10px;
    border: 2px solid rgba(125, 159, 186, .5);
    padding:2px;
    padding-left:4px;
    padding-right:4px;
    text-decoration:none;
    color: #666666;
    cursor: pointer;
    line-height:2em;
    background-color: rgba(255, 255, 255, .7);
}

.disabled, .current {
    cursor:default;
    color:#c0c0c0;

}
.current {
    color:#000;
    font-weight:bold;
}


@media screen and (max-width: 1000px) {
    #middle {
        width:100% !important;
        padding:0!important;
        padding-bottom:50px !important;
    }



}
@media screen and (max-width: 700px) {
    #top a {
        float:none;
        display: block;
        line-height: normal;
        padding: 5px;
        clear:both;
    }
    #logo, #logo2 {
        display:inline !important;
        line-height:70px !important;

    }
    #middle {
        width:100%;
        padding:10px 0 50px 0;
    }
    #m_menu  {
        border-bottom:solid 2px black;
        padding: 5px ;
        padding-top:10px;
    }
    #content{
        padding:0!important;
    }
}
@media screen and (max-height: 500px) {
    #sign_in {
        position:static;
        margin:auto;
    }

}



