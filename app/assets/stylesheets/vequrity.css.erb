body, html {
    font: 15px/1.7 "Open Sans",Arial,Verdana,sans-serif;
    height:100%;
    margin:0;
    padding:0;

}

textarea {
    width:100%;
}
a{ text-decoration:none; color:red;}
p {
    margin: 10px 0;
}
h1 {
    margin:15px 0;
    font-size:30px;
    line-height: normal;
}
h2 {
    margin:20px 0;
    font-size:22px;
    line-height: normal;
}
h3 {
    margin: 25px 0;
    font-size:20px;
    line-height: normal;
}
#contain {position:relative;
    background: url('<%=asset_path 'sisutaust.jpeg'%>') no-repeat fixed;
    background-size: cover;
    min-height:100%;
    line-height:1.25em;
}
#c-wrap {
    height:100%;
}
#content {
    padding:10px;
    height:100%;

}

/* Topmenu */
#top {
    background: black;
    width:100%;
    overflow-y:auto;
    text-align: center;
}
#top-bar {
    width:90%;
    margin:auto;
}
#top a {
    line-height:100px;
    font-size:1.2em;
    background: black;
    color:white;
    font-weight: bold;
    padding: 0 20px;
}
#top img{
     vertical-align: middle;
}
#logo img{
    height:35px;
}
#logo2 img{
       height:80px;
}
#top .current_tab {
    color:red;
}

.flash{
    padding: 15px;
    margin-bottom: 20px;
    color: #3c763d;
    background-color: #dff0d8;
    border-color: #d6e9c6;
    border-radius: 4px;
}
.flash.error {
    color: #a94442;
    background-color: #f2dede;
    border-color: #ebccd1;
}
.flash.alert{
    background-color: #fcf8e3;
    border-color: #faebcc;
    color: #8a6d3b;
}



/* middle */
#middle {
    overflow-y:auto;
    width:90%;
    margin:auto;
    padding-bottom: 50px;
}
#m_menu  {
    border-bottom:solid 2px black;
    padding:40px 40px 0 40px;
}
.b_menu {
    display:inline-block;
    padding: 10px 15px;
    color:dimgrey;
    font-size:1em;
    margin-bottom:-2px;
}

.b_menu.current_tab {
    border-bottom:solid 3px red;

}
.s_menu a{
    color:dimgrey;
    display:inline-block;
}
.s_menu  {
    display: none;
    font-size:17px;
}
.s_menu td  {
   padding: 0 10px;
}
.s_menu.current_tab  {
   display: initial;
}
#s_menu {
    color:red;
    line-height:25px;

}
/* footer */
#footer {position: absolute;
    bottom:0;
    padding:10px 0;
    background: black;
    width:100%;
    text-align: center;
}
#footer a {
    line-height:30px;
    font-size:1em;
    background: black;
    color:white;
    text-decoration:none;
    font-weight: bold;
    padding: 0 20px;
}


/*sidebar*/
.side_visible {
    margin-left:300px;
}

#sidemenu{
    float:left;
    width: 300px;
    font-size:1.1em;
    display: none;
    margin-top:15px;
    position: relative;
    z-index: 2;
}

ul {margin-left:30px; list-style-type:circle; }
ul.no-bullet {
    list-style-type:none;
    margin-left:0;
}
#sidemenu ul {margin-left:0;}
#menu-head {

    height: 30px;

    color: black;
    font-weight: 500;
    /* font-family: Verdana, Helvetica, Arial, sans-serif;*/
}
#sidemenu li {
    list-style-type:none;
    line-height: 1.5em;
    color: black;
    /* font-family: "Helvetica Neue", "Lucida Grande", Helvetica, Arial, Verdana, sans-serif;*/
}
#sidemenu li.upper {
    margin-top:5px;
}
#sidemenu li.between {
    padding-left: 10px;
    background: #F8F8FF;
}

#sidemenu li.started {
    list-style-type:none;
    height: 2em;
    background:#e0f2dc;
    /*font-family: "Helvetica Neue", "Lucida Grande", Helvetica, Arial, Verdana, sans-serif;*/
}
#sidemenu li.ended {
    list-style-type:none;
    height: 2em;
    background:#F8F8FF;
    /* font-family: "Helvetica Neue", "Lucida Grande", Helvetica, Arial, Verdana, sans-serif;*/
}

#sidemenu li a {
    padding-left: 15px;
    color: black;
    display: block;
    text-decoration: none;
}

#sidemenu a:hover {
   color:#ff0000;
}

#sidemenu #menu-hide {
    float:right;
    height: 30px;
    width: 30px;
    display: block;
    background: transparent url("<%=asset_path 'Back-50.png'%>") no-repeat; /*https://icons8.com/web-app/1806/Back*/
    background-size:contain;
    cursor: pointer;
}
#sidemenu  p {
    padding:5px;

}

#menu-show {
    display: block;
    height: 30px;
    width: 30px;
    position: absolute;
    left: 0;
    background: transparent url("<%=asset_path 'Right4-50.png'%>") no-repeat; /*https://icons8.com/web-app/7233/Right4*/
    background-size:contain;
    cursor: pointer;
    float:left;
}
.current_lab a {
    font-weight: normal!important;
    color:#ff0000 !important;
}
/* sidemenu hidden */
.user_labs #content, .vms_by_state #content, .vms_by_lab #content, .labs.edit #content, .labs.new #content {
    padding-left:30px;
    position:relative;
}

/* sidemenu visible */
.lab_users.add_users #content {
    margin-left:300px;
    padding-left:30px;
    position:relative;
}

.lab_users.add_users #menu-show {
    display: none;
}
.lab_users.add_users #sidemenu {
    display: block;
}

