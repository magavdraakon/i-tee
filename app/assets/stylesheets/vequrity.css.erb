    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin:0 auto;
    z-index: 10;
    display:table;
    width:100%;
    height:100%;
    color:white;
}
#cell{
    display:table-cell;
    vertical-align:middle;
}
#sisu {
    display: table;
    margin: auto;
    height:100px;
    width:100px;
    opacity:0.9;
    border-radius:50%;
    padding: 10px;
}

#loading {
    display:none;
    height: 0;
}




